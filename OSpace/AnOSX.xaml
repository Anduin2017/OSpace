<UserControl x:Class="OSpace.AnOSX"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OSpace"
             mc:Ignorable="d" d:DesignWidth="300" Height="58">
    <Grid x:Name="back" Margin="0,0,0,0"  Background="#FFF6F7F9" MouseEnter="back_MouseEnter" MouseLeave="back_MouseLeave" MouseLeftButtonDown="back_MouseLeftButtonDown">
        <Border BorderThickness="1,1,1,1" BorderBrush="#FFDDE1E8" CornerRadius="1.5">
            <Grid>
                <Label x:Name="Name" Content="Name Of OS" Margin="0,5,0,0" FontSize="13" Foreground="#FF333333" Height="33" VerticalAlignment="Top"  />
                <Label x:Name="Identifier" Content="Identifier:"  FontSize="11" Foreground="#FF898989" HorizontalAlignment="Left" Width="80" Margin="0,22,0,0" Height="26" VerticalAlignment="Top"  />
                <Label x:Name="Identifiervalve" Content="Identifier:" Margin="70,23,0,0" FontSize="11" Foreground="#FF898989" Height="24" VerticalAlignment="Top"  />
            </Grid>
        </Border>
    </Grid>
</UserControl>